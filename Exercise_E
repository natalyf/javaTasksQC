
public class Exercise_E {
  public static void main(String[] args)  {
       int x = 0;
       int z = 3;
       do {
       z = z * 2; 
       x = x + z;
       System.out.println("+1 cycle");
       // This is my solution to count how many times the loop will be executed.
       }
       
       while (z <7); 
       
       System.out.println("x = " + x);
       System.out.println("z = " + z);
 
	}
}
